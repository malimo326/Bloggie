@model Bloggie.Web.Models.viewModles.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3" >Bloggie Web</h1>
            <p class="lead">Bloggie er en norsk nettavis som dekker nyheter fra inn- og utland, kultur, sport og underholdning.</p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/902194/pexels-photo-902194.jpeg?auto=compress&cs=tinysrgb&w=400"
            alt="Bloggie"
            class="d-block mx-lg-auto img-fluid" width="300"/>
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.tags.Any())
            {
                foreach (var tag in Model.tags)
                {
                    <span class="badge bg-dark me-1 mb-3">
                        @tag.Name
                    </span>
                }
            }
        </div>

    </div>

</div>

<style>
    .blog-post {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .blog-post:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .blog-post img {
            border-radius: 8px;
            max-height: 200px;
            object-fit: cover;
        }

        .blog-post h2 {
            color: #333;
            font-size: 1.5rem;
        }

        .blog-post p {
            color: #555;
        }

        .blog-post .badge {
            font-size: 0.8rem;
        }

        .blog-post .btn-dark {
            background-color: #333;
            border-color: #333;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .blog-post .btn-dark:hover {
                background-color: #555;
                border-color: #555;
            }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                @if (Model != null && Model.blogPosts.Any())
                {
                    foreach (var blogPost in Model.blogPosts)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="bg-light box-shadow p-5 blog-post">
                                <img src="@blogPost.FeaturedImageUrl"
                                     alt="@blogPost.Heading" class="mb-2 d-block img-fluid" />
                                <h2 class="mb-4">@blogPost.Heading</h2>
                                <p class="mb-4">
                                    Author: @blogPost.Author<br />
                                    Published Date: @blogPost.PublishedDate.ToShortDateString()
                                </p>
                                <p class="mb-4">
                                    @foreach (var tag in blogPost.Tags)
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Name</span>
                                    }
                                </p>
                                <p class="mb-5">@blogPost.ShortDescription</p>
                                <a class="btn btn-dark"
                                   asp-area=""
                                   asp-controller="Blogs"
                                   asp-action="Index"
                                   asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>





