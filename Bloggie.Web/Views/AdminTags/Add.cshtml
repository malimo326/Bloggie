@model Bloggie.Web.Models.viewModles.AddTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
         <h1>Add new Tag - Admin Functionality</h1>
    </div>
</div>
    <div class="container py-5">
        <form method="post">
